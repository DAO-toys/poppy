// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Room {
  id             String           @id @default(cuid())
  name           String
  giftersOnRooms GiftersOnRooms[]
  points         Point[]
  results        Result[]
  createdAt      DateTime         @default(now())
  startedAt      DateTime         @default(now())
  endedAt        DateTime
  creator        Gifter           @relation(fields: [gifterId], references: [id])
  gifterId       BigInt
}

model Result {
  room     Room    @relation(fields: [roomId], references: [id])
  roomId   String
  gifter   Gifter  @relation(fields: [gifterId], references: [id])
  gifterId BigInt
  percent  Decimal

  @@id([roomId, gifterId])
}

model Gifter {
  id             BigInt           @id @default(autoincrement())
  name           String
  eth_addr       String           @unique
  giftersOnRooms GiftersOnRooms[]
  sentPoint      Point[]          @relation(name: "sender")
  receivedPoint  Point[]          @relation(name: "receiver")
  Result         Result[]
  Room           Room[]
}

model GiftersOnRooms {
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  gifter    Gifter   @relation(fields: [gifterId], references: [id])
  gifterId  BigInt
  enteredAt DateTime @default(now())
  accept    Boolean  @default(true)

  @@id([roomId, gifterId])
}

model Point {
  room       Room     @relation(fields: [roomId], references: [id])
  roomId     String
  sender     Gifter   @relation(name: "sender", fields: [senderId], references: [id])
  senderId   BigInt
  receiver   Gifter   @relation(name: "receiver", fields: [receiverId], references: [id])
  receiverId BigInt
  point      Int
  createdAt  DateTime @default(now())

  @@id([roomId, senderId, receiverId])
}
